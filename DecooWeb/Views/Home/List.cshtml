<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 class="panel-title">
            查询条件
        </h4>
    </div>
    <form method="get">
        <div class="panel-body">
            <div class="container-fluid">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon text-right" id="spanInterfaceName">接口名称：</span>
                        <input name="DesignName" type="text" class="form-control" placeholder="请输入部分设计文档名称" aria-describedby="spanInterfaceName" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon text-right" id="spanInterfaceName">创建人：</span>
                        <input name="Creator" type="text" class="form-control" placeholder="请输入创建人" aria-describedby="spanInterfaceName" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon text-right" id="spanInterfaceName">创建时间：</span>
                        <div id="CreateStartDate" class="input-group date">
                            <input name="CreateStartDate" class="form-control" data-format="yyyy-MM-dd" placeholder="请选择开始时间" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <div id="CreateEndDate" class="input-group date">
                            <input name="CreateEndDate" class="form-control" data-format="yyyy-MM-dd" placeholder="请选择开始时间" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class ="container-fluid">
                <div class="col-md-12 text-center">
                    <button class="btn btn-default">查询</button>
                </div>
            </div>
        </div>
    </form>
    <div class="panel-body">
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th class="text-center">设计文档名称</th>
                    <th class="text-center">创建人</th>
                    <th class="text-center">创建时间</th>
                    <th class="text-center">更新人</th>
                    <th class="text-center">最后更新时间</th>
                    <th class="text-center">操作</th>
                </tr>
            </thead>
            <tbody>
                @if (this.ViewBag.Project != null && this.ViewBag.Project.设计文档列表 != null)
                {
                    foreach (var doc in this.ViewBag.Project.设计文档列表)
                    {
                        <tr>
                            <td>@doc.设计文档名称</td>
                            <td>@doc.创建人</td>
                            <td>@if (doc.创建时间.HasValue) {<text>doc.创建时间.Value</text>} else {<text></text>}</td>
                            <td>@doc.更新人</td>
                            <td>@doc.最后更新时间</td>
                            <td class="text-center"><a href="#" target="_blank">查看</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div id="Grid"></div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#CreateStartDate').datetimepicker({
            format: "YYYY-MM-DD"
        });
        $('#CreateEndDate').datetimepicker({
            format: "YYYY-MM-DD"
        });
    });
</script>
