<section id="Interface">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">

                <a data-toggle="collapse" data-target="#containerInterface"
                   href="#containerInterface">接口设计</a>
            </h4>
        </div>

        <div id="containerInterface" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="btn-group" role="group">
                    <button class="btn btn-default" id="btnAddInterface">新增</button>
                    <button class="btn btn-default" id="btnDelInterface">删除</button>
                </div>
                <table class="table table-hover table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>
                                接口地址
                            </td>
                            <td>
                                请求参数名称
                            </td>
                            <td>
                                是否必填
                            </td>
                            <td>
                                请求参数类型
                            </td>
                            <td>
                                备注
                            </td>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <div id="grid"></div>
    </div>
</section>
<script type="text/javascript">
    $(document).ready(function () {

        var grid = DataGridViewHelper.CreateInstance();
        grid.Columns = ["column1", "column2", "column3"];
        grid.Buttons = [{
            ID: "btnAdd",
            Text: "新增",
            OnClick: function (sender, grid) {
                grid.NewRow();
            }
        },
        {
            ID: "btnEdit",
            Text: "编辑",
            OnClick: function (sender, grid) {
                grid.BeginEdit();
            }
        },
        {
            ID: "btnDelete",
            Text: "删除",
            OnClick: function (sender, grid) {
                grid.DeleteSelectedRows();
            }
        },
        {
            ID: "btnCollect",
            Text: "收集数据",
            OnClick: function (sender, grid) {
                grid.CollectData();
            }
        }
        ];
        grid.DisplayCheckbox = true;
        grid.SetData([{ column1: 1, column2: "2", column3: "hi" }]);
        grid.Render("grid");

    });
</script>